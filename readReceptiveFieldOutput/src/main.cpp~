#include <iostream>
#include <time.h>
#include <vector>
#include <string>
#include <math.h>
#include <vector>

#include <yarp/os/Network.h>
#include <yarp/os/BufferedPort.h>

using namespace std;
using namespace yarp::os;


int main(int argc, char *argv[])
{
    Network yarpy;

    bool run = true;

    BufferedPort<Bottle> inputBottle;
    inputBottle.open("/localNeuronPotentialReader:i");    


    yarpy.connect( "/outputRF1", "/localNeuronPotentialReader:i");

    vector<double> potential;

    while(run)
    {
        Bottle *tempData;

    
        tempData = inputBottle.read();
        for (int i=0; i<tempData->size(); i++)
        {
            cout << tempData->get(i).asDouble() << " ";
        }
        cout << endl;
    }
       

}


